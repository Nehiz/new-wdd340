<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('../partials/head') %>
  <title>Inventory Management</title>
  <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
  <div id="page-container">
    <div>
      <h1>Inventory Management</h1>
      <!-- Flash messages display -->
      <% if (messages) { %>
        <% Object.keys(messages).forEach(function(key) { %>
          <ul class="messages">
            <% messages[key].forEach(function(message) { %>
              <li class="<%= key %>"><%= message %></li>
            <% }); %>
          </ul>
        <% }); %>
      <% } %>
      <!-- Links using MVC approach -->
      <ul>
        <li><a href="/inv/add-classification">Add New Classification</a></li>
        <li><a href="/inv/add-inventory">Add New Inventory</a></li>
      </ul>
      <!-- New content for managing inventory -->
      <h2>Manage Inventory</h2>
      <p>Select a classification to view inventory items:</p>
      <!-- Display the select list -->
      <form id="classificationForm">
        <%- classificationSelect %>
      </form>
      <!-- Empty table for inventory items -->
      <table id="inventoryDisplay"></table>
      <!-- NoScript message -->
      <noscript>
        <p>JavaScript must be enabled to use this page.</p>
      </noscript>
    </div>
  </div>
  <!-- Include the JavaScript file -->
  <script src="../../js/inventory.js"></script>
</body>
</html>
