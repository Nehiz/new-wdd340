<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('../partials/head') %>
  <title><%= title %></title>
  <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
  <div id="page-container">
    <div>
      <div class="detail-container">
        <div class="detail-image">
            <div class="image-overlay">
                <img src="<%= data.inv_image %>" alt="Image of <%= data.inv_make %> <%= data.inv_model %>" />
            </div>    
        </div>
        <div class="detail-info">
          <div class="detail-info-header">
            <div class="mileage">
              <span class="mileage-name">MILEAGE</span>
              <span class="mileage-number"><%= new Intl.NumberFormat('en-US').format(data.inv_miles) %></span>
            </div>
            <h2 class="car-name"><%= data.inv_make %> <%= data.inv_model %></h2>
            <p class="car-price">$<%= new Intl.NumberFormat('en-US').format(data.inv_price) %></p>
          </div>
          <div class="detail-text">
            <p><strong>Year:</strong> <%= data.inv_year %></p>
            <p><strong>Price:</strong> $<%= new Intl.NumberFormat('en-US').format(data.inv_price) %></p>
            <p><strong>Mileage:</strong> <%= new Intl.NumberFormat('en-US').format(data.inv_miles) %> miles</p>
            <p><strong>Color:</strong> <%= data.inv_color %></p>
            <p><strong>Description:</strong><%= data.inv_description %></p>
          </div>
          <div class="detail-actions">
            <button onclick="location.href='/purchase/<%= data.inv_id %>'">Start My Purchase</button>
            <button onclick="location.href='/contact'">Contact</button>
            <button onclick="location.href='/financing'">Apply for Financing</button>
            <button onclick="location.href='/test-drive'">Schedule a Test Drive</button>
          </div>
          <div class="cta-container">
            <button onclick="location.href='tel:1234567890'">Call Us: (123) 456-7890</button>
            <button onclick="location.href='/visit-us'">Visit Us</button>
          </div>
        </div>
      </div>
    </div>
  </div>
</body>
</html>


