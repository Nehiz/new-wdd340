<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('../partials/head') %>
  <title><%= title %></title>
  <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
  <div id="page-container">
    <div class="form-container">
      <h1><%= title %></h1>
      <%- messages() %>
      <% if (errors) { %>
        <ul class="error-list">
          <% errors.array().forEach(error => { %>
            <li><%= error.msg %></li>
          <% }) %>
        </ul>
      <% } %>
      <form id="loginForm" action="/account/login" method="post" class="login-form"> <!-- Ensure correct method and action -->
        <label for="account_email">Email:</label>
        <input type="email" id="account_email" name="account_email" required value="<%= locals.account_email %>">
        
        <label for="account_password">Password:</label>
        <div class="password-instructions">Passwords must be at least 12 characters and contain at least 1 number, 1 capital letter, and 1 special character.</div>
        <input type="password" id="account_password" name="account_password" required
               pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$"
               title="Password must be at least 12 characters long, contain at least one uppercase letter, one lowercase letter, one number, and one special character.">
        
        <button type="submit">Login</button>
      </form>
      <p>Don't have an account? <a href="/account/register">Register here</a></p>
    </div>
  </div>
</body>
</html>